/*1.Hacer un programa que realice la multiplicación de dos enteros sin signo usando sumas*/
	

#include <conio.h>
#include <stdio.h>
#include <iostream> 
#include <string> 
	

	int main(){
		int a, b, result; 
		cout<< "Ingrese dos números: ";
	

		cin>>a;
		cin>>b;
		
		result=0;
		
		for (int i=1; i=b; i++)
		{
			result=result+a;
		
		}
		
		cout<<"El resultado es: "<<result << endl;
	}
	

	

