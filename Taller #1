/*3. hacer un programa que calcule el polinomio de grado n, en donde los coeficientes 
del polinomio se encuentran almacenados en un vector k de n+1 posiciones, de la siguientes forma:
pol(x,k,n)=i=0nkixi, En donde el ki se encuentra en la posición k[i] del vector k.*/
	

	int main()
	{
	   int n;
	 
	   cout<<"Ingrese el numero";
	   cin>>n;
	 
	   int k[i]; 
	   int x;
	 
	   for (int i = 0; i < n; i++) 
	   {
	      cout<<"Coeficiente a["<<i<<"]=";
	      cin>>k[i];
	   }
	 
	   cout<<"Ingresar un numero para x";
	   cin>>x;
	 
	   int valor_#=evalua(k, n, x);
	   cout<<"Valor numerico p("<<x<<") = "<<valor_#<<endl;
	 
	   cin.get();
	   cin.get();
	   return 0;
	}
	 
	int evalua(int k[], int n, int x) {
	   int p = 0;
	   for (int i = 0; i < n; i++) 
	   {
	      p = p + k[i] * pow(x, i);
	   }
	 
	   return p;
	}
	

/*4. haga un programa  que calcule el factorial de un número entero sin signo*/
	

#include <iostream> 
#include <string> 
	

	int main() { 
	

		int facto=0; 
		int a =0;
		cout<<"Ingrese un numero: "; 
		cin>>a;
		cin>>facto; 
	

		int temp=facto-1; 
		int result=facto; 
	

		while (temp>=1) 
		{ 
			result=result*temp; 
			temp--; 
		} 
		cout<<"El resultado de ("<<n<<") es: "<<result<<end1; 
	} 
	

/*5. Realice un programa  calcule la división entera entre dos números enteros.*/
	

	#include <iostream> 
	#include <string> 
	

	int main(){
	

		int div, dividendo, residuo, cociente=0; 
		cout<<"Ingresar un numero dividendo: "; 
		cin>>dividendo; 
	

		cout<<"Ingrese un numero divisor: "; 
		cin>>div; 
	

		while(dividendo>divisor)
		{ 
			dividendo=dividendo-div; 
			cociente=cociente+1; 
		} 
	

		residuo=dividendo; 
		cout<<"El resultado es "<<cociente<<" y el residuo es "<<residuo;
		system("pause");
		return 0;
	}
